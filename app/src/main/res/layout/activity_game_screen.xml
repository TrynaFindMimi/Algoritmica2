<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/btnGoBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/menu"
        app:tint="@color/accent_gold_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnMusicToggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_volume_on"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/menu"
        app:tint="@color/accent_gold_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_for_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="448dp" />

    <FrameLayout
        android:id="@+id/meteoritoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controlStation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/controlStation"
        android:layout_width="196dp"
        android:layout_height="106dp"
        android:src="@drawable/penguin1"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/registerBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="12dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_card"
        android:elevation="12dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_for_register">

        <EditText
            android:id="@+id/inputDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background_secondary"
            android:fontFamily="@font/roman"

            android:gravity="center"
            android:hint="@string/input_hint"
            android:padding="10dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/keypad"
            android:layout_width="0dp"
            android:layout_height="107dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="3"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputDisplay">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_7"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_8"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_9"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keyValidar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_gold_main"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/validate"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_4"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_5"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_6"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keyCancelar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_gold_main"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_1"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_2"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_3"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/accent_light_cream"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/_0"
                android:textColor="@color/tone_deep_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                tools:ignore="TouchTargetSizeCheck" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>